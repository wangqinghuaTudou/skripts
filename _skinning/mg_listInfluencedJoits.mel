/*Script Name : mg_listInfluencedJoitsVersion : 1.0Author : ManishWebsite : www.manishtoons.commail : manish@manishtoons.comUsage : Source the script and run  "mg_listInfluencedJoits()" in command line, it will list out 	 all the influenced joints of selected poly mesh.*/global proc  mg_listInfluencedJoits(){	if (`window -ex mg_listInfluencedJoitsUI`)	deleteUI mg_listInfluencedJoitsUI;		window -t "List Influenced Joints -" 	mg_listInfluencedJoitsUI;		formLayout inflJointMainForm;	frameLayout -l "Influenced Joints List :" infJointMainFrame;		formLayout -e			-af infJointMainFrame top 2		-af infJointMainFrame left 2		-af infJointMainFrame right 2		-af infJointMainFrame bottom 2		inflJointMainForm;		formLayout inflJointSubForm;		textScrollList -aas 1 -ams 1 -sc "mg_tslSel inflJointList" inflJointList;	button -l "Reload Selected" -command "mg_reloadJInfluencedJointsList()" inflJointsReloadButton;	button -l "Cancel" -command "deleteUI mg_listInfluencedJoitsUI" inflJointsCancelButton;		formLayout -e			-af inflJointList top 2		-af inflJointList left 2		-af inflJointList right 2		-af inflJointList bottom 25			-ac inflJointsReloadButton top 2 inflJointList 		-af inflJointsReloadButton left 2		-ap inflJointsReloadButton right 0 48			-ac inflJointsCancelButton top 2 inflJointList 		-ap inflJointsCancelButton left 0 48		-af inflJointsCancelButton right 2		inflJointSubForm;		 mg_reloadJInfluencedJointsList();		showWindow mg_listInfluencedJoitsUI;}global proc string[] mg_returnInfluencedJointsList(string $mesh){	string $getShape[] = `listRelatives -type "shape" $mesh`;		if (`nodeType $getShape[0]`!= "mesh")	error "Reuired selection is only one poly mesh !";			string $bindJsList[];	$bindJsList = `skinCluster -q -wi $mesh`;		return $bindJsList;}global proc mg_reloadJInfluencedJointsList(){	string $getSelectionIfAvail[] = `ls -sl`;	if (size($getSelectionIfAvail)>0)  	{			string $getMeshShape[] = `listRelatives -type "shape" $getSelectionIfAvail[0]`;				if (`nodeType $getMeshShape[0]`== "mesh")		{			string $listOutJoints[] = `mg_returnInfluencedJointsList $getSelectionIfAvail[0]` ;						textScrollList -e -ra inflJointList ;						for ($eJoint in $listOutJoints)			{			textScrollList -e -append $eJoint inflJointList ;			}		frameLayout -e -l ("Influenced Joints List : " + $getSelectionIfAvail[0] ) infJointMainFrame;		}		else		{		warning "Select poly mesh and try again !";		frameLayout -e -l "Influenced Joints List : " infJointMainFrame;		}	}}global proc mg_tslSel(string $TSL)	{ // select the items that are hilighted in the tsl    string $sel[0];    $sel = `textScrollList -q -si $TSL`;    if (size($sel) > 0)    {        select $sel;    } };